<nav>
  <%= link_to t('views.actions.go_back'), root_path, class: 'btn btn-secondary' %>
</nav>

<main class='row'>
  <div class='col-md-12'>
    <header class='header'>
      <h1><%= t('views.resources.car_categories.plural') %></h1>

      <p><%= t('views.resources.car_categories.description') %></p>
    </header>

    <section class='contents'>
      <% if @car_categories.empty? %>
        <p><%= t('views.resources.car_categories.empty_resource') %></p>
      <% end %>

      <ol>
        <% @car_categories.each do |car_category| %>
          <li>
            <h3>
              <%= link_to car_category.name, car_category %>
            </h3>
          </li>
        <% end %>
      </ol>
    </section>

    <div class='actions mt-4'>
      <%= link_to  t('views.actions.new'), new_car_category_path, class: 'btn btn-primary' %>
    </div>
  </div>
</main>
