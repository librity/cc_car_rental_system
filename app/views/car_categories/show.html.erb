<nav clas='col'>
  <%= link_to I18n.t('views.actions.go_back'), car_categories_path, class: 'btn btn-secondary' %>
</nav>

<main class='row'>
  <div class='col-12'>
    <header class='header'>
      <h1> <%= @car_category.name %> </h1>
    </header>

    <section class='contents'>
      <dl>
        <dt>Di√°ria:</dt>
        <dd> <%= number_to_currency(@car_category.daily_rate) %> </dd>
        <dt>Seguro:</dt>
        <dd> <%= number_to_currency(@car_category.insurance) %> </dd>
        <dt>Seguro de Terceiros:</dt>
        <dd> <%= number_to_currency(@car_category.third_party_insurance) %> </dd>
      </dl>
    </section>

    <div class='actions mt-4'>
      <%= link_to I18n.t('views.actions.edit'), edit_car_category_path(@car_category), class: 'btn btn-primary' %>
      <%= link_to I18n.t('views.actions.delete'), @car_category, method: :delete, 
                  data: { confirm: I18n.t('messages.delete_resource', resource: @car_category.name) },
                  class: 'btn btn-danger' %>
    </div>
  </div>
</main>
