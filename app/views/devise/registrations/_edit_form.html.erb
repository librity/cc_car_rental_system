<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put } do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div> <%= t('views.devise.registrations.awaiting_confirmation', email: resource.unconfirmed_email) %> </div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i><%= t('views.devise.registrations.leave_blank') %></i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    <% if @minimum_password_length %>
      <em>(<%= t('views.devise.registrations.min_password_length', length: @minimum_password_length) %>)</em>
    <% end %><br />
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i> <%= t('views.devise.registrations.current_password') %> </i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <%= f.submit t('views.actions.update'), class: 'btn btn-primary' %>
<% end %>
